<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="连接服务器" />

    <Button
        android:id="@+id/btn_send_heart_beat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="send heart beat"/>

    <Button
        android:id="@+id/btn_send_location_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="send location msg"/>

    <Button
        android:id="@+id/btn_send_personal_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="send personal msg"/>

    <Button
        android:id="@+id/btn_send_order_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="send order msg"/>
</LinearLayout>
